@model asp_project.Models.Course
<h2>@ViewBag.Title</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Fee"></label>
        <input asp-for="Fee" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaxStudents"></label>
        <input asp-for="MaxStudents" class="form-control" />
    </div>
    <div class="form-group">
        <label for="TeacherId">Chọn giảng viên</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers">
            <option value="">-- Chọn --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Image">Ảnh khóa học</label>
        <input type="file" name="ImageFile" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>