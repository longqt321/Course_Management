@model asp_project.Models.Student

<h2>Xóa người dùng</h2>

<h4>Bạn có chắc muốn xóa người dùng này?</h4>
<div>
    <p><strong>Tên đăng nhập:</strong> @Model.Username</p>
    <p><strong>Họ tên:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
